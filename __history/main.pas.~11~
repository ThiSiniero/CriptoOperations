{$R *.dfm}

uses dm_criptomoedas;

procedure TForm1.btLoginClick(Sender: TObject);
begin

  if ( txtUsuario.Text = 'admin' ) and ( txtSenha.Text = '123' ) then
      begin
        coin.show ;
      end
  else
      begin
        ShowMessage ('Usuario Incorreto') ;
      end;
end;

end.
