type
  TForm1 = class(TForm)
    Label1: TLabel;
    txtUsuario: TEdit;
    Label2: TLabel;
    txtSenha: TEdit;
    btLogin: TButton;
    procedure btLoginClick(Sender: TObject);
  private
    { Private declarations }
